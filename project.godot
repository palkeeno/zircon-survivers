config_version=5

[application]

config/name="zircon-survivers"
run/main_scene="res://scenes/ui/StartScreen.tscn"
config/features=PackedStringArray("4.5", "C#", "Mobile")
config/icon="res://icon.svg"

[autoload]

Localization="*res://scripts/core/Localization.gd"
GameManager="*res://scripts/core/GameManager.gd"
PoolManager="*res://scripts/core/ObjectPool.gd"
SaveDataManager="*res://scripts/core/SaveDataManager.gd"

[dotnet]

project/assembly_name="zircon-survivers"

[editor_plugins]

enabled=PackedStringArray("res://addons/gut/plugin.cfg")

[input_devices]

pointing/emulate_touch_from_mouse=true

[layer_names]

2d_physics/layer_1="world"
2d_physics/layer_2="player"
2d_physics/layer_3="enemy"
2d_physics/layer_4="player_projectile"
2d_physics/layer_5="loot"
2d_physics/layer_6="enemy_projectile"
2d_physics/layer_7="trigger"
2d_physics/layer_8="hurtbox"

[rendering]

renderer/rendering_method="mobile"
